<%- include('partials/header'); %>
<!-- Header section
================================================== -->
<section id="header" class="header-one" style="background-image:url('/images/disney1.jpg')">
   <div class="container">
      <div class="row">

         <div class="col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8">
            <div class="header-thumb">
               <h1 class="wow fadeIn" data-wow-delay="1.6s">KIDDY-Play</h1>
               <h3 class="wow fadeInUp" data-wow-delay="1.9s">An Interactive Channel for Children</h3>
            </div>
         </div>

      </div>
   </div>
</section>
</section>

<!-- Portfolio section
================================================== -->
<section id="portfolio" style="background: #ebebff">
   <div class="container">
      <div class="row">

         <div class="col-md-12 col-sm-12">

            <!-- iso box section -->
            <div class="iso-box-section wow fadeInUp" data-wow-delay="1s">
               <div class="iso-box-wrapper col4-iso-box">

                  <% posts.forEach(post => { %>
                  <div class="iso-box photoshop branding col-md-3 col-sm-3">
                     <div class="portfolio-thumb">
                        <img src="<%= post.image %> " class="img-responsive" alt="Portfolio">
                        <div class="portfolio-overlay">
                           <div class="portfolio-item">
                              <a href="/show/<%= post._id %> "><i class="fa fa-link"></i></a>
                              <h2>-<%= post.category.toUpperCase() %>-</h2>
                           </div>
                        </div>
                     </div>
                  </div>
                  <% }); %>
               </div>
            </div>
         </div>

      </div>
   </div>
</section>

<%- include('partials/footer'); %>