<%- include('partials/header'); %>
<!-- Header section
================================================== -->
<section id="header" class="header-two" style="background-image:url('/images/disney1.jpg')">
	<div class="container">
		<div class="row">

			<div class="col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8">
				<div class="header-thumb">
					<h1 class="wow fadeIn" data-wow-delay="1.6s">KIDDY-Play</h1>
					<h3 class="wow fadeInUp" data-wow-delay="1.9s">An Interactive Channel for Children</h3>
				</div>
			</div>

		</div>
	</div>
</section>


<!-- Single Project section
================================================== -->
<section id="single-project" style="background: #ebebff">
	<div class="container">
		<div class="row">

			<div class="wow fadeInUp col-md-offset-1 col-md-3 col-sm-offset-1 col-sm-4" data-wow-delay="2.3s">
				<div class="project-info">
					<h4>Date</h4>
					<hp><%= post.date.getDate() %> <%= monthNames[post.date.getMonth()] %> <%= post.date.getFullYear() %> </p>
				</div>
				<div class="project-info">
					<h4>Category</h4>
					<p><%= post.category %> </p>
				</div>
			</div>

			<div class="wow fadeInUp col-md-7 col-sm-7" data-wow-delay="2.6s">
				<h1><%= post.title %> </h1>
				<%- post.body %>
				<video src="<%= post.video %>" width="600" height="300" class="video-responsive" controls></video>
				<p><i>Source : <%= post.video_source %> </i></p>
			</div>

		</div>
	</div>
</section>

<%- include('partials/footer'); %>